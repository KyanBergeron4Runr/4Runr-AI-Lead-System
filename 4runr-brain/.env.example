# Campaign Brain Configuration

# OpenAI Configuration (Required)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Quality Control
CAMPAIGN_QUALITY_THRESHOLD=80.0
CAMPAIGN_MAX_RETRIES=2

# Logging
LOG_LEVEL=INFO
TRACE_LOGS_ENABLED=true

# Performance
EXECUTION_TIMEOUT=300
CONCURRENT_LIMIT=3

# Memory Storage (Optional - Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Integration with 4Runr System (Optional)
# If these are set, the service will integrate with existing Airtable and queue systems
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=your-base-id
AIRTABLE_TABLE_NAME=Table 1

# Message Queue Integration
QUEUE_DIRECTORY=queue
TRACE_DIRECTORY=trace_logs
LEADS_DIRECTORY=leads