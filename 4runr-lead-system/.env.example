# ==============================
# 4Runr Lead System Configuration
# ==============================

# Airtable Configuration
# ---------------------
# Your Airtable API key from https://airtable.com/account
AIRTABLE_API_KEY=your_airtable_api_key_here
# Your Airtable base ID from the API documentation
AIRTABLE_BASE_ID=your_airtable_base_id_here
# The name of the table in your Airtable base
AIRTABLE_TABLE_NAME=Leads

# OpenAI Configuration
# -------------------
# Your OpenAI API key from https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Microsoft Graph Configuration
# ---------------------------
# For email integration (optional)
MS_GRAPH_CLIENT_ID=your_ms_graph_client_id_here
MS_GRAPH_CLIENT_SECRET=your_ms_graph_client_secret_here
MS_GRAPH_TENANT_ID=your_ms_graph_tenant_id_here
MS_GRAPH_SENDER_EMAIL=your_sender_email@example.com

# Application Configuration
# -----------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info
# Number of mock leads to generate per run
SCRAPER_LEAD_COUNT=5
# Delay between scraper runs in seconds (default: 3600 = 1 hour)
SCRAPER_DELAY_SECONDS=3600
# Enable debug mode (true/false)
DEBUG=false