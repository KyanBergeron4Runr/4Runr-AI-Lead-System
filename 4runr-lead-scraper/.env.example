# 4Runr Lead Scraper Configuration

# SerpAPI Configuration (Required)
SERPAPI_KEY=your_serpapi_key_here

# Airtable Configuration (Required)
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here
AIRTABLE_TABLE_NAME=Leads

# Database Configuration
LEAD_DATABASE_PATH=data/leads.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_RETENTION_DAYS=30

# Scraping Configuration
MAX_LEADS_PER_RUN=10
SEARCH_LOCATION=Montreal, Quebec, Canada
SEARCH_QUERIES=CEO,Founder,President

# Enrichment Configuration
MAX_EMAIL_ATTEMPTS=2
MAX_WEBSITE_ATTEMPTS=2
ENRICHMENT_TIMEOUT_SECONDS=30
SKIP_EMAIL_IF_NO_WEBSITE=true
USE_PATTERN_EMAILS=true

# Sync Configuration
AIRTABLE_SYNC_INTERVAL_MINUTES=30
AUTO_SYNC_TO_AIRTABLE=true

# Logging Configuration
LOG_LEVEL=INFO
VERBOSE_LOGGING=false
LOG_FILE=logs/lead_scraper.log

# System Configuration
RUN_ONCE=false
DEBUG=false