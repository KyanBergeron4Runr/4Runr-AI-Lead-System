# Optimized single-stage Dockerfile for faster builds
FROM python:3.11-slim

WORKDIR /app

# Install Node.js and system dependencies in one layer
RUN apt-get update && apt-get install -y \
    # Node.js installation
    curl \
    wget \
    gnupg \
    ca-certificates \
    && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    # Chromium dependencies for Playwright
    && apt-get install -y \
    libnss3 \
    libxss1 \
    libasound2 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libgbm1 \
    libgtk-3-0 \
    libpango-1.0-0 \
    libcairo2 \
    libdrm2 \
    libx11-xcb1 \
    libxext6 \
    libxtst6 \
    fonts-liberation \
    libappindicator3-1 \
    xdg-utils \
    libicu-dev \
    libxkbcommon0 \
    # Clean up
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install Playwright with all dependencies
RUN npx playwright install --with-deps chromium

# Copy application files
COPY app.py .
COPY linkedin_scraper.py .

# Create necessary directories
RUN mkdir -p /shared /app/logs && chmod 777 /app/logs

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PLAYWRIGHT_BROWSERS_PATH=/root/.cache/ms-playwright

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD python -c "import os; exit(0 if os.path.exists('/shared') else 1)" || exit 1

# Run the application
CMD ["python", "app.py"]